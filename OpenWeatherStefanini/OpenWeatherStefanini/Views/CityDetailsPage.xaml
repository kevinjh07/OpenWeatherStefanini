<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:converter="clr-namespace:OpenWeatherStefanini.Converters"
             x:Class="OpenWeatherStefanini.Views.CityDetailsPage"
             Title="Detalhes">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:FavoritedCityToIconConverter x:Key="FavoritedCityToIconConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="{Binding City.Favorited, Converter={StaticResource FavoritedCityToIconConverter}}" 
                     Command="{Binding AddOrRemoveFavoriteCityCommand}" />
    </ContentPage.ToolbarItems>
</ContentPage>
